.text-center
  text-align: center

body
  position: absolute
  height: 100%
  width: 100%
  margin: 0
  font-family: 'Reem Kufi', helvetica

header
  display: flex
  position: relative
  width: 100%
  height: 100%
  align-items: center
  align-content: center
  justify-content: center
  background-color: black

header a:hover
  text-decoration: underline

header a, .downloads a
  color: #fff !important
  text-decoration: none !important

.downloads a:hover
  text-decoration: none !important

header .version,
header .issues,
header .see-more
  position: absolute
  bottom: 20px
  font-size: 17px

header .version
  left: 20px

header .see-more
  left: calc(50% - 13px)
  fill: #fff
  stroke: #fff
  height: 26px
  width: 26px

header .issues
  right: 20px

.background-image,
.background-mask
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%

.background-image
  background-size: cover
  background-position: center

.background-mask
  background-color: rgba(0, 0, 0, 0.4)

.title
  z-index: 1
  color: white

.title h1
  margin: 0
  font-size: 110px
  font-weight: 300
  line-height: 1

.title p
  margin: 0
  font-size: 24px

.downloads
  display: flex
  justify-content: center

.downloads__icon
  width: 30px
  height: 30px
  padding: 16px
  margin: 10px
  border-radius: 100%
  background-color: rgba(130, 141, 255, 0.61)
  fill: #fff
  stroke: #fff
  transition: background-color 300ms, transform 300ms
  transform: scale(0.95)


.downloads__icon:hover
  background-color: rgba(130, 141, 255, 0.8)
  transform: scale(1.05)

main
  p, h2, small
    font-weight: 200
    letter-spacing: 0.4px
    font-family: Helvetica Neue, Lato, -apple-system, BlinkMacSystemFont, Helvetica

section
  display: flex
  flex-wrap: wrap
  justify-content: center
  align-items: center
  padding: 60px 30px 0 30px
  color: #333

  h2
    font-size: 40px
    font-weight: 100
    margin-top: 0

  p
    line-height: 1.4

.block
  width: 500px
  max-width: 100%
  margin: 20px

.block--lg
  width: 800px

.thanks
  width: 300px
  text-align: center
  margin:auto
  padding:60px 0 10px 0
  line-height: 1.2
